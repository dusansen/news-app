{
  "extends": ["react-app"],
  "env": {
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "quotes": ["error", "single", { "avoidEscape": true }],
    "jsx-quotes": ["error", "prefer-single"],
    "max-len": ["error", { "code": 120, "ignoreStrings": true }]
  },
  "globals": {
    "shallow": false
  }
}